<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PIDEV.Controllers.AffichageArticleAdminController">
   <children>
      <TableView fx:id="TableViewArticle" layoutX="360.0" layoutY="115.0" prefHeight="483.0" prefWidth="940.0">
         <columns>
            <TableColumn fx:id="ArticleTitle" prefWidth="192.0" text="Titre article" />
            <TableColumn fx:id="Contenu" prefWidth="202.0" text="Contenu" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <contextMenu>
            <ContextMenu>
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#SupprimerArticle" text="Supprimer" />
                  <MenuItem mnemonicParsing="false" onAction="#ModifierArticle" text="Modifier" />
               </items>
            </ContextMenu>
         </contextMenu>
         <effect>
            <Lighting>
               <bumpInput>
                  <Shadow />
               </bumpInput>
               <light>
                  <Light.Distant />
               </light>
            </Lighting>
         </effect>
      </TableView>
      <Button fx:id="displaythemebutton" mnemonicParsing="false" onAction="#affichetheme" text="Afficher" />
      <Pane prefHeight="600.0" prefWidth="365.0" style="-fx-background-color: #4B4B4B;">
         <children>
            <Button fx:id="ajout_article" layoutX="6.0" layoutY="198.0" mnemonicParsing="false" onAction="#redirect_to_add_article" prefHeight="47.0" prefWidth="356.0" text="Ajouter article">
               <font>
                  <Font name="Lucida Sans Unicode" size="19.0" />
               </font>
            </Button>
            <Button fx:id="affichagetheme" layoutX="6.0" layoutY="332.0" mnemonicParsing="false" onAction="#rediract_to_show_themes" prefHeight="47.0" prefWidth="356.0" text="Afficher themes">
               <font>
                  <Font name="Lucida Sans Unicode" size="19.0" />
               </font>
            </Button>
            <Button fx:id="ajout_theme" layoutX="5.0" layoutY="268.0" mnemonicParsing="false" onAction="#rediract_to_show_article" prefHeight="47.0" prefWidth="356.0" text="Ajouter theme">
               <font>
                  <Font name="Lucida Sans Unicode" size="19.0" />
               </font>
            </Button>
         </children>
      </Pane>
      <Label layoutX="444.0" layoutY="6.0" prefHeight="68.0" prefWidth="377.0" text="Liste des articles">
         <font>
            <Font name="Arial Black" size="37.0" />
         </font>
      </Label>
      <ImageView fitHeight="101.0" fitWidth="74.0" layoutX="370.0" layoutY="3.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/50763.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
