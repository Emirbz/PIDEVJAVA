<AnchorPane id="AnchorPane" fx:id="AnchorPaneTHeme" prefHeight="600.0" prefWidth="1300.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PIDEV.Controllers.AffichageThemeController">
    <stylesheets>
        <URL value="@affichagetheme.css" />
    </stylesheets>
   <children>
      <TableView fx:id="TableViewTheme" layoutX="385.0" layoutY="98.0" prefHeight="503.0" prefWidth="915.0">
        <columns>
            <TableColumn fx:id="ThemeNameColumn" prefWidth="192.0" text="Nom Theme" />
          <TableColumn fx:id="ThemeDescriptionColumn" prefWidth="202.0" text="Description" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <contextMenu>
            <ContextMenu>
              <items>
                <MenuItem mnemonicParsing="false" onAction="#SupprimerTheme" text="Supprimer" />
                  <MenuItem mnemonicParsing="false" onAction="#ModifierTheme" text="Modifier" />
              </items>
            </ContextMenu>
         </contextMenu>
         <effect>
            <Lighting>
               <bumpInput>
                  <Shadow />
               </bumpInput>
               <light>
                  <Light.Distant />
               </light>
            </Lighting>
         </effect>
      </TableView>
      <Button fx:id="displaythemebutton" layoutX="24.0" layoutY="361.0" mnemonicParsing="false" onAction="#affichetheme" text="Afficher" />
      <Pane layoutX="-2.0" prefHeight="600.0" prefWidth="388.0" style="-fx-background-color: #4B4B4B;">
         <children>
            <Button fx:id="affiche_article" layoutX="6.0" layoutY="171.0" mnemonicParsing="false" onAction="#afficheArticle" prefHeight="47.0" prefWidth="377.0" text="Afficher article">
               <font>
                  <Font name="Lucida Sans Unicode" size="19.0" />
               </font>
            </Button>
            <Button fx:id="AjoutTheme" layoutX="6.0" layoutY="242.0" mnemonicParsing="false" onAction="#AjoutTheme" prefHeight="47.0" prefWidth="377.0" text="Ajouter themes">
               <font>
                  <Font name="Lucida Sans Unicode" size="19.0" />
               </font>
            </Button>
            <Button fx:id="AjoutArticle" layoutX="6.0" layoutY="307.0" mnemonicParsing="false" onAction="#Ajoutarticle" prefHeight="47.0" prefWidth="377.0" text="Ajouter article">
               <font>
                  <Font name="Lucida Sans Unicode" size="19.0" />
               </font>
            </Button>
         </children>
      </Pane>
      <Label layoutX="439.0" layoutY="4.0" prefHeight="68.0" prefWidth="377.0" text="Liste des themes">
         <font>
            <Font name="Arial Black" size="37.0" />
         </font>
      </Label>
      <ImageView fitHeight="101.0" fitWidth="74.0" layoutX="375.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/50763.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
